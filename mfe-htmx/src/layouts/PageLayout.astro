---
import '../styles/base.css';

const { title = 'ZMP' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/assets/css/fontawesome.all.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="/js/htmx.min.js" is:inline></script>
    
    <script src="/js/handlebars.js" is:inline></script>
    <script defer src="/js/alpinejs.3.x.min.js"></script>
  </head>

  <body data-theme="zmp">
    <div class="p-2 h-screen w-screen">
      <slot />
    </div>
    <script is:inline>
      htmx.logAll()
    </script>
    <script src="/js/client-side-templates.js" is:inline
    ></script>
  </body>
</html>