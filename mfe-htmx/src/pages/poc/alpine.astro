---
import Partial from '@layouts/Partial.astro';

export const partial=true;
---

<Partial>
  <button x-data @click="$store.darkMode.toggle()">Toggle Dark Mode</button>

  ...

  <div x-data :class="$store.darkMode.on && 'bg-black'">hello</div>

  <div
    x-data="{ open: false }"
    x-init="$watch('open', (value, oldValue) => console.log(value, oldValue))"
  >
    <button @click="open = ! open">Toggle Open</button>
  </div>

  <div x-data="{ title: 'Hello' }">
    <button
      @click="title = 'Hello World!';$nextTick(() => { console.log($el.innerText) });"
      x-text="title"></button>
  </div>
</Partial>
